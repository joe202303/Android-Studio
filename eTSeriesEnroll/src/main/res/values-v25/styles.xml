<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ContextPopupMenuStyleDark" parent="@android:style/Widget.Holo.Light.PopupMenu">
        <item name="android:overlapAnchor">true</item>
    </style>

    <style name="checkboxStyle" parent="@android:style/Widget.Holo.CompoundButton.CheckBox">
    </style>

    <style name="actionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/TextAppearance.Holo.Widget.ActionBar.Title.Own</item>
    </style>

    <style name="TextAppearance.Holo.Widget.ActionBar.Title.Own"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar" >
        <item name="android:contextPopupMenuStyle">@style/ContextPopupMenuStyleDark</item>
        <item name="android:checkboxStyle">@style/checkboxStyle</item>
        <item name="android:actionBarStyle">@style/actionBarStyle</item>
    </style>

</resources>